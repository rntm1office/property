<div class="content_title">
  <h2>Listing Users</h2>
</div>
<div class="options">
  <%= link_to image_tag("add.png",:size=>"18x18") + 'New user', new_user_path %>
</div>
<table class="list_record">
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h get_user_name(user.id) %></td>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td class="list_option">
        <%= link_to image_tag("view.gif"), user %>
        <%= link_to image_tag("edit.png"), edit_user_path(user) %>
        <%= link_to image_tag("close.png"), user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>