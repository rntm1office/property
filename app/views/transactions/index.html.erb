<h1>Listing transactions</h1>

<table>
  <tr>
    <th>id</th>
    <th>Property</th>
    <th>Date</th>
    <th>Category</th>
    <th>Amount</th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%=h transaction.id  %></td>
    <td><%=h transaction.property_account_id %></td>
    <td><%=h transaction.date %></td>
    <td><%=h get_category_description(transaction.category_id)  %></td>
    <td><%=h transaction.amount  %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New transaction', :controller=>'transactions',:action=>'new',:property_account_id=>params[:property_account_id] %>